<section class="vh-150" style="background-color: #508bfc;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

          <h2 class="mb-5" >Sign up</h2>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>

                <div class="form-outline mb-4">
                  <%= f.label :avatar, class:"fs-5" %>
                  <%= f.file_field :avatar %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :user_name, class:"fs-5" %>
                  <%= f.text_field :name, class:"form-control" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :email, class:"fs-5" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :password, class:"fs-5" %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.label :password_confirmation, class:"fs-5" %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
                </div>

                <div class="actions">
                  <%= f.submit "Sign up",class:"btn btn-primary btn-lg btn-block" %>
                </div>
              <% end %>

              <%= render "users/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>