<p id="notice"><%= notice %></p>
<%= button_to "Back", conversations_path, method: :get, class:"btn btn-outline-warning" %>

<h1 style="text-align: center;">Messages</h1>

<% @messages.each do |chat| %>

  <% if chat.content %>

    <% if chat.user.name == current_user.name %>

      <div class="d-flex flex-row justify-content-end mb-4 " >
        <div class="p-3 ms-3" style="border-radius: 15px; background-color: rgba(57, 192, 237,.2);" >
          <p class="fs-6"><%= chat.content %></p>
          <p class="small ms-3 mb-3 rounded-3 text-muted float-end"><%= chat.created_at %></p>
        </div>
        <strong><%= chat.user.name %></strong>
      </div>

      <% else %>

      <div class="d-flex flex-row justify-content-start mb-4">
        <strong><%= chat.user.name %></strong>
        <div class="p-3 ms-3" style="border-radius: 15px; background-color: lightblue;" >
          <p class="fs-6"><%= chat.content %></p>
          <p class="small ms-3 mb-3 rounded-3 text-muted float-end"><%= chat.created_at %></p>
        </div>
      </div>

    <% end %>

    <br>

    <% else %>
     Start your first chat!!!
    <% end %>

<% end %>

<%= render 'messages/form', message: @conversation.messages.new %>